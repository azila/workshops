%p#notice= notice
%p#error= flash[:error]

%p
  %b Title:
  = product.title
%p
  %b Description:
  = product.description
%p
  %b Price:
  = product.price

%p
  %b Category
  = product.category.name

%h3 Reviews
= render 'reviews/form'

%br
= render reviews

%br
= link_to category_products_path, class: 'btn btn-link' do              
  %span.glyphicon.glyphicon-backward
  Back
\|
= link_to edit_category_product_path(category.id, product.id), class: 'btn btn-link' do              
  %span.glyphicon.glyphicon-edit
  Edit
